import java.util.Scanner;
public class Main {

	public static void main(String[] args) {
	  	  Scanner sc = new Scanner(System.in);
		  	
	  	 int x,y,w,h;
	  	  x = sc.nextInt();
	  	  y = sc.nextInt();
	  	w = sc.nextInt();
	  	h = sc.nextInt();

	  	 if(Math.min(x, w-x) > Math.min(y, h-y)) {
			System.out.println(Math.min(y, h-y)); 
	  	 } else {
	  		System.out.println(Math.min(x, w-x));
	  	 }
	  }
}
